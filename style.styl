.md_alert
		background-color rgba(0, 0, 0,0.5)
		align-items center
		color #fff
		display none
		position fixed
		justify-content center
		height 100vh
		width 100%
		z-indes 999
		.md_alert_inside
			background-color #fff
			border-radius 12px
			width 86%
		.md_alert_content
			color #333
			box-sizing border-box
			overflow hidden
			padding 24px
			width 100%
			h2
			h5
				display 
				font-size: 14px
				font-weight: 700
				margin 0px
				padding-bottom 0px
				text-align: center
				width 100%
			.icon
				display: block
				margin-top 24px
				text-align: center
				width 100%
				img
					display block
					margin 0px auto
					width 90px
		.md_alert_footer
			display: blockq
			width 100%
			.md_alert_btn_close
				border-top 1px solid #f0f0f0
				color #323742
				display block
				font-weight: 700
				padding 16px
				text-decoration none
				text-align: center
				width 100%
		
		
		